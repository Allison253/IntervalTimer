<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.IntervalTimer" parent="Theme.MaterialComponents.Light">
        <!-- Primary brand color. -->
        <item name="android:windowBackground">@color/midnight_blue</item>
        <item name="colorPrimary">@color/light_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="android:textColor">@color/white </item>
        <item name="radioButtonStyle">@style/MyRadioButton</item>


        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <!-- Customize your theme here. -->

        <item name="cardViewStyle">@style/MyDarkCard</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="MyDarkCard" parent="CardView.Dark">
        <item name="cardBackgroundColor">@color/dark_midnight_blue</item>
        <item name="cardForegroundColor">@color/pink</item>
    </style>
    <style name="MyRadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/white</item>
        <item name="buttonTint">@color/pink</item>
    </style>

    <style name="ContastTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/light_blue</item>
    </style>
    <style name="customBtn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/light_blue</item>
    </style>



</resources>